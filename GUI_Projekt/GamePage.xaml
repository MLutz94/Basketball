<Page x:Class="GUI_Projekt.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI_Projekt"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="GamePage">

    <Border BorderBrush="Black" BorderThickness="5">    <!-- schwarzer Rahmen -->
        <!-- Canvasobjekt als Spielfeld. ClipToBounds=True sorgt dafür, dass der Ball nur
             im Spielfeld gezeichnet wird, selbst wenn die Koordinaten außerhalb sind -->
        <Canvas Name="GameArea" ClipToBounds="True" Width="800" Height="400" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">

            <Canvas.Background>
                <ImageBrush ImageSource="Hintergrund.jpg"  />   <!-- Hintergrundbild -->
            </Canvas.Background>

        </Canvas>
    </Border>
    
</Page>
